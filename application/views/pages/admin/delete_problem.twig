{% set selected = 'problems' %}
{% extends 'templates/base.twig' %}
{% block icon %}fa-times{% endblock %}
{% block title %}Delete Problem{% endblock %}
{% block head_title %}Delete Problem{% endblock %}



{% block main_content %}
<p>Are you sure you want to delete this Problem?</p>
<p>
	Problem id: {{ id }}<br>
	Problem name: <span dir="auto">{{ name }}</span>
</p>
{{ form_open('problems/delete/'~id) }}
<input type="hidden" name="delete" value="delete"/>
<p class="input_p">
	<input type="submit" class="btn shj-red" value="Delete this problem"/>
	<a href="{{ site_url('problems') }}" class="btn shj-blue">Do not delete</a>
</p>
</form>
{% endblock %}  {# main_content #}